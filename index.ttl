##################################################################
# 共通スキーマ定義 (オントロジー)
# AIに「言葉の意味」を教えるための辞書です
##################################################################

ex:GraphRAG a rdfs:Class ;
    rdfs:label "知識領域 (GraphRAG)" .

ex:entryFile a rdf:Property ;
    rdfs:label "エントリーファイルパス" ;
    rdfs:comment "この知識領域の詳細が書かれたファイルのパス" .

ex:Project a rdfs:Class ;
    rdfs:label "プロジェクト" .

ex:Task a rdfs:Class ;
    rdfs:label "タスク" .

ex:Member a rdfs:Class ;
    rdfs:label "メンバー" .
